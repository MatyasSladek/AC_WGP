<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.github.matyassladek.ac_wgp.controllers.CalendarController"
            stylesheets="@../styles/modern-theme.css"
            styleClass="root">

    <top>
        <VBox spacing="10" styleClass="header-section">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Create Race Calendar" styleClass="title">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label fx:id="raceCountLabel" text="Races: 0/25" styleClass="race-count">
                    <font>
                        <Font name="System Bold" size="16"/>
                    </font>
                </Label>
                <Label fx:id="statusLabel" text="Select tracks to begin" styleClass="status-label">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox spacing="20" style="-fx-padding: 20;">

            <!-- Available Tracks Section -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Available Tracks" styleClass="section-label">
                    <font>
                        <Font name="System Bold" size="16"/>
                    </font>
                </Label>

                <ListView fx:id="availableTracksList" VBox.vgrow="ALWAYS"
                          style="-fx-font-size: 14px;"/>
            </VBox>

            <!-- Control Buttons -->
            <VBox spacing="15" alignment="CENTER">
                <Button fx:id="addTrackButton" text="Add →"
                        onAction="#handleAddTrack"
                        prefWidth="150"
                        styleClass="action-button">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>

                <Button fx:id="removeTrackButton" text="← Remove"
                        onAction="#handleRemoveTrack"
                        prefWidth="150"
                        styleClass="action-button">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>

                <Separator prefWidth="150"/>

                <Button fx:id="moveUpButton" text="Move Up ↑"
                        onAction="#handleMoveUp"
                        prefWidth="150"
                        styleClass="action-button">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>

                <Button fx:id="moveDownButton" text="Move Down ↓"
                        onAction="#handleMoveDown"
                        prefWidth="150"
                        styleClass="action-button">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>
            </VBox>

            <!-- Selected Tracks Section -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Race Calendar" styleClass="section-label">
                    <font>
                        <Font name="System Bold" size="16"/>
                    </font>
                </Label>

                <ListView fx:id="selectedTracksList" VBox.vgrow="ALWAYS"
                          style="-fx-font-size: 14px;"/>
            </VBox>

        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 20;">
            <Button fx:id="confirmButton" text="Confirm"
                    onAction="#handleConfirm"
                    prefWidth="150"
                    prefHeight="40"
                    styleClass="confirm-button">
                <font>
                    <Font name="System Bold" size="16"/>
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>