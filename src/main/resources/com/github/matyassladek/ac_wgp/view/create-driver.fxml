<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
      fx:controller="com.github.matyassladek.ac_wgp.controllers.CreateDriverController"
      stylesheets="@../styles/modern-theme.css"
      styleClass="root">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <Label text="CREATE DRIVER">
      <font>
         <Font size="48.0" />
      </font>
   </Label>

   <!-- Driver Information Section -->
   <Label text="DRIVER INFORMATION">
      <font>
         <Font size="18.0" />
      </font>
   </Label>

   <Label text="FIRST NAME" />
   <TextField fx:id="firstNameField" prefWidth="300.0" />

   <Label text="LAST NAME" />
   <TextField fx:id="lastNameField" prefWidth="300.0" />

   <Label text="COUNTRY" />
   <ChoiceBox fx:id="countryChoiceBox" prefWidth="300.0" />

   <Label text="TEAM" />
   <ChoiceBox fx:id="teamChoiceBox" prefWidth="300.0" />

   <Separator prefWidth="400.0" />

   <!-- File Paths Section -->
   <Label text="CONFIGURATION PATHS">
      <font>
         <Font size="18.0" />
      </font>
   </Label>

   <Label text="JSON RESULTS FILE PATH" />
   <HBox alignment="CENTER_LEFT" spacing="10.0">
      <TextField fx:id="jsonFilePathField" prefWidth="350.0" promptText="Select the JSON file that will contain race results..." />
      <Button fx:id="browseJsonButton" text="BROWSE" onAction="#onBrowseJsonButtonClick"
              style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
   </HBox>

   <Label text="ASSETTO CORSA GAME DIRECTORY" />
   <HBox alignment="CENTER_LEFT" spacing="10.0">
      <TextField fx:id="acGamePathField" prefWidth="350.0" promptText="Select your Assetto Corsa installation folder..." />
      <Button fx:id="browseAcPathButton" text="BROWSE" onAction="#onBrowseAcPathButtonClick"
              style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
   </HBox>

   <Label text="Note: The JSON file will be used to load race results automatically.&#10;The AC directory is used to read UI settings and available tracks."
          style="-fx-text-fill: #666666;" wrapText="true" maxWidth="500.0" />

   <Button mnemonicParsing="false" text="SUBMIT" onAction="#onSubmitButtonClick"
           style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" />
</VBox>