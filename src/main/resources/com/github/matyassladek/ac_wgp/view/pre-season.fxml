<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.github.matyassladek.ac_wgp.controllers.PreSeasonController"
            stylesheets="@../styles/modern-theme.css"
            styleClass="root">

    <top>
        <VBox spacing="15" styleClass="header-section">
            <padding>
                <Insets top="25" right="25" bottom="15" left="25"/>
            </padding>

            <!-- Single HBox with Label on the left and Button on the right -->
            <HBox alignment="CENTER_LEFT">
                <Label fx:id="seasonLabel" text="Season X - Team Development" styleClass="title">
                    <font>
                        <Font name="System Bold" size="32"/>
                    </font>
                </Label>

                <!-- Spacer pushes the button to the right -->
                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="continueButton"
                        text="Continue"
                        onAction="#handleContinue"
                        prefWidth="180"
                        prefHeight="40"
                        styleClass="confirm-button">
                    <font>
                        <Font name="System Bold" size="16"/>
                    </font>
                </Button>
            </HBox>

        </VBox>
    </top>


    <center>
        <VBox spacing="15" style="-fx-padding: 25;">

            <!-- Teams container will be populated dynamically -->
            <VBox fx:id="teamsContainer" spacing="10" VBox.vgrow="ALWAYS"/>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10"/>
                </padding>
                <Label text="ðŸ’¡ Tip:" styleClass="tip-label">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                <Label text="Higher performance values mean faster cars. Teams with higher factory levels develop faster."
                       wrapText="true" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </center>

</BorderPane>